<% if notice %>
  <div class="notice">
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div class="alert">
    <%= alert %>
  </div>
<% end %>

<div class="container">
  <div class="col-lg-6">
    <h1>Register your expenses</h1>

    <%= form_tag :expenses do %>
      <%= number_field_tag :value  %>
      <%= submit_tag %>
    <% end %>
  </div>
  <div class="col-lg-6">
    <h1>Your imcomplete expenses</h1>
    <% @expenses.each do |expense| %>
      <%= expense.value %>
      <br>
    <% end %>
  </div>
</div>